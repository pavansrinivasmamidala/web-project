<style>
  /* existing styles... */

  .restaurant-item {
    /* existing styles... */
    display: flex;
    flex-direction: column;
  }

  .restaurant-item .restaurant-name,
  .restaurant-item .restaurant-cuisine,
  .restaurant-item .restaurant-borough {
    /* existing styles... */
    margin-bottom: 10px;
  }

  /* additional styles for the edit form... */
  .restaurant-item .edit-form {
    display: none;
  }

  .restaurant-item.editing .edit-form {
    display: block;
  }

  .restaurant-item.editing .restaurant-name,
  .restaurant-item.editing .restaurant-cuisine,
  .restaurant-item.editing .restaurant-borough {
    display: none;
  }

  .restaurant-item .edit-form input {
    /* additional styles for the input fields... */
  }

  .restaurant-item .edit-form .actions {
    /* additional styles for the actions row... */
  }

  .restaurant-item .edit-form .actions button {
    /* existing styles... */
    margin-left: 10px;
  }
</style>

<ul class="restaurant-list">
  {{#each restaurants}}
    <li class="restaurant-item {{#if editing}}editing{{/if}}">
      <span class="restaurant-name">Name: {{name}}</span>
      <span class="restaurant-cuisine">Cuisine: {{cuisine}}</span>
      <span class="restaurant-borough">Borough: {{borough}}</span>
      {{#if actions}}
        <div class="actions">
          {{#each actions}}
            <button class="{{className}}">{{label}}</button>
          {{/each}}
        </div>
      {{/if}}
      <form class="edit-form">
        <input type="text" name="name" value="{{name}}">
        <input type="text" name="cuisine" value="{{cuisine}}">
        <input type="text" name="borough" value="{{borough}}">
        <div class="actions">
          <button class="save-btn">Save</button>
          <button class="cancel-btn">Cancel</button>
        </div>
      </form>
    </li>
  {{/each}}
</ul>
