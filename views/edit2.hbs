{{!-- edit-restaurant.hbs --}}
<h1>Edit Restaurant</h1>

{{!-- display a form for editing the restaurant data --}}
<form action="/restaurants/{{restaurant._id}}" method="post">
  {{!-- specify that the form should use the PUT method --}}
  <input type="hidden" name="_method" value="PUT">

  {{!-- display the restaurant name, cuisine, and borough fields --}}
  <label for="name">Name:</label>
  <input type="text" name="name" value="{{restaurant.name}}">
  <br>

  <label for="cuisine">Cuisine:</label>
  <input type="text" name="cuisine" value="{{restaurant.cuisine}}">
  <br>

  <label for="borough">Borough:</label>
  <input type="text" name="borough" value="{{restaurant.borough}}">
  <br>

  {{!-- create a submit button for the form --}}
  <button type="submit">Update Restaurant</button>
</form>
